@model IEnumerable<FoodManagement2.Models.Food>


<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model=>model.NAME)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.PRICE)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.QTY)
            </th>
           

            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @if (Model is not null)
        {
            foreach (var i in Model)
            {
                <tr>
                    <td>
                        <img decoding="async" src="@("~/Image/"+i.IMAGE)" asp-append-version="true" width="40px" height="40px" class="rounded-circle" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => i.NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => i.PRICE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => i.QTY)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@i.F_ID" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@i.F_ID" class="btn btn-success">Details</a>
                        <a asp-action="Delete" asp-route-id="@i.F_ID" class="btn btn-warning">Delete</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
